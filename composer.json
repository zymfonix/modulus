{
    "name": "zymfonix/modulus",
    "description": "Base functionality for modular Laravel",
    "keywords": [
        "Zymfonix",
        "laravel",
        "modulus"
    ],
    "homepage": "https://github.com/zymfonix/modulus",
    "license": "MIT",
    "authors": [
        {
            "name": "Zymfonix",
            "email": "dev@zymfonix.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "spatie/laravel-package-tools": "^1.14.0",
        "illuminate/contracts": "^10.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.8",
        "orchestra/testbench": "^8.8",
        "pestphp/pest": "^2.20",
        "pestphp/pest-plugin-arch": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Zymfonix\\Modulus\\": "src/",
            "Zymfonix\\Modulus\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Zymfonix\\Modulus\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "clear": "@php vendor/bin/testbench package:purge-modulus --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": [
            "@composer run prepare",
            "@php vendor/bin/testbench workbench:build --ansi"
        ],
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "@composer run build",
            "@php vendor/bin/testbench serve"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Zymfonix\\Modulus\\ModulusServiceProvider"
            ],
            "aliases": {
                "Modulus": "Zymfonix\\Modulus\\Facades\\Modulus"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
